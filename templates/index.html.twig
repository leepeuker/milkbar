{% extends 'base.html.twig' %}

{% block title %}
    Nursing log
{% endblock %}

{% block body %}
    <h1>Nursing log</h1>
    <button type="button" class="btn btn-primary">Add nursing time</button>  <span id="test"></span>
    <script>
      var span = document.getElementById('test');

      function time() {
        var d = new Date();
        var s = d.getSeconds();
        var m = d.getMinutes();
        var h = d.getHours();
        span.textContent =
          ("0" + h).substr(-2) + ":" + ("0" + m).substr(-2) + ":" + ("0" + s).substr(-2);
      }

      setInterval(time, 1000);
    </script>
{% endblock %}
