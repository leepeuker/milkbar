{
  "name": "leepe/milkbar",
  "type": "project",
  "authors": [
    {
      "name": "Lee Peuker",
      "email": "lee.peuker@protonmail.com"
    }
  ],
  "require": {
    "php": "^8.4",
    "ext-json": "*",
    "doctrine/dbal": "^3.9",
    "monolog/monolog": "^3.9",
    "nikic/fast-route": "^1.3",
    "php-di/php-di": "^7.0",
    "ramsey/uuid": "^4.7",
    "robmorgan/phinx": "^0.16",
    "symfony/console": "^7.1",
    "twig/twig": "^3.21",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpstan/phpstan": "^2.1",
    "vimeo/psalm": "^6.12"
  },
  "scripts": {
    "test": [
      "@test-phpstan",
      "@test-psalm"
    ],
    "test-phpstan": "phpstan analyse --memory-limit 512M -c ./settings/phpstan.neon",
    "test-psalm": "psalm -c ./settings/psalm.xml --show-info=false"
  },
  "autoload": {
    "psr-4": {
      "Milkbar\\": "src/"
    }
  },
  "config": {
    "sort-packages": true
  }
}
